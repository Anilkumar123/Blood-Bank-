<h1>thanks for ur interest in donating blood</h1>
<h1> Showing Donor Details </h1>



 <table class="gridtable">
  <tr>
    <th> First Name </th>
    <th> Last Name</th>
    
    <th> Gender </th>
    <th> Address </th>
    <th> Location</th>
    <th> Age</th>
    <th> Phone number</th>
    <th> Blood Group</th>
    <th>Action</th>
  </tr>
  


  <% @donors.each do |d| %>
  
  <tr>
    <td> <%= d.firstname %></td>
    <td> <%= d.lastname %></td>
    <td> <%= d.gender %></td>
    <td> <%= d.address %></td>
    <td> <%= d.location %></td>
    <td> <%= d.age %></td>
    <td> <%= d.ph_number %></td>
    <td> <%= d.blood_group %></td>
    <td><%= link_to "Delete", donor_path(d), method: :delete, data: { confirm:  "Are you sure!" }%></td>
    <td><%= link_to "Show", donor_path(d) %></td>

    
    
  </tr>
  <% end %>
</table>
